# ClaudeOps Production Environment Configuration
# This file contains production-specific environment variables

# Application Configuration
NEXT_PUBLIC_APP_URL=https://claudeops.yourdomain.com
NEXT_PUBLIC_APP_NAME=ClaudeOps

# Environment
NODE_ENV=production

# Anthropic Claude API Configuration
ANTHROPIC_API_KEY=your_production_anthropic_api_key_here

# Database Configuration
DATABASE_URL=sqlite:./data/production.db

# WebSocket Configuration
WEBSOCKET_PORT=3001
WEBSOCKET_HOST=0.0.0.0

# Security Configuration
NEXTAUTH_SECRET=your_secure_production_nextauth_secret_here
NEXTAUTH_URL=https://claudeops.yourdomain.com

# Cost Tracking Configuration - Production Limits
COST_ALERT_THRESHOLD=50.00
MONTHLY_BUDGET_LIMIT=500.00
COST_BUDGET_DAILY=25.00
COST_BUDGET_MONTHLY=500.00

# Agent Configuration - Production Settings
MAX_CONCURRENT_EXECUTIONS=5
MAX_CONCURRENT_AGENTS=5
DEFAULT_AGENT_TIMEOUT=300000
AGENT_MEMORY_LIMIT=1024
AGENT_CPU_LIMIT=80

# Logging Configuration
LOG_LEVEL=warn
LOG_FILE_PATH=./logs/claudeops-production.log

# Performance Configuration
CONFIG_CACHE_TTL=300000
DISABLE_HOT_RELOAD=true

# Health Check Configuration
HEALTH_CHECK_INTERVAL=60000
HEALTH_CHECK_TIMEOUT=10000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# SSL/TLS Configuration
SSL_CERT_PATH=/etc/ssl/certs/claudeops.crt
SSL_KEY_PATH=/etc/ssl/private/claudeops.key

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30