{
  "name": "claudeops",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "AI-powered homelab automation with Claude agent execution monitoring",
  "scripts": {
    "dev": "tsx server.ts",
    "build": "next build && tsc -p tsconfig.server.json",
    "start": "node dist/server.js",
    "lint": "next lint",
    "type-check": "tsc --noEmit",
    "clean": "rimraf .next dist",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:reset": "rimraf data/development.db && npm run db:generate && npm run db:migrate",
    "docker:build": "docker build -t claudeops:latest .",
    "docker:run": "docker run -p 3000:3000 --env-file .env.production claudeops:latest",
    "docker:compose": "docker compose up -d",
    "docker:compose:build": "docker compose up -d --build",
    "docker:compose:down": "docker compose down",
    "docker:compose:logs": "docker compose logs -f",
    "backup": "node -r ts-node/register scripts/backup.ts",
    "backup:prod": "DATABASE_PATH=./data/production.db BACKUP_PATH=./backups node -r ts-node/register scripts/backup.ts",
    "deploy:staging": "cross-env NODE_ENV=staging npm run build && npm run db:migrate",
    "deploy:production": "cross-env NODE_ENV=production npm run build && npm run db:migrate",
    "health-check": "curl -fsS http://localhost:3000/api/system/health || exit 1",
    "health:run": "tsx runner.ts system-health",
    "setup:production": "shx cp .env.local.example .env.production && echo 'Please edit .env.production with your production settings'"
  },
  "dependencies": {
    "@anthropic-ai/claude-code": "^1.0.113",
    "@anthropic-ai/sdk": "^0.62.0",
    "@paralleldrive/cuid2": "^2.2.2",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-label": "^2.1.7",
    "@radix-ui/react-progress": "^1.1.7",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-separator": "^1.1.7",
    "@radix-ui/react-slot": "^1.2.3",
    "@radix-ui/react-switch": "^1.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-tooltip": "^1.2.8",
    "better-sqlite3": "^11.6.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.37.0",
    "lucide-react": "^0.544.0",
    "next": "15.5.3",
    "node-cron": "^4.2.1",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "react-window": "^2.1.0",
    "recharts": "^3.2.0",
    "sonner": "^2.0.7",
    "tailwind-merge": "^2.5.5",
    "ws": "^8.18.0",
    "zod": "^4.1.8"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@tailwindcss/postcss": "^4.1.13",
    "@tailwindcss/typography": "^0.5.16",
    "@types/better-sqlite3": "^7.6.11",
    "@types/node": "^22.10.7",
    "@types/node-cron": "^3.0.11",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "@types/react-window": "^1.8.8",
    "@types/ws": "^8.5.14",
    "autoprefixer": "^10.4.20",
    "cross-env": "^10.0.0",
    "drizzle-kit": "^0.31.0",
    "eslint": "^9.0.0",
    "eslint-config-next": "15.5.3",
    "postcss": "^8.5.1",
    "rimraf": "^6.0.1",
    "shx": "^0.3.4",
    "tailwindcss": "^4.0.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.5",
    "tw-animate-css": "^1.0.5",
    "typescript": "^5.7.4"
  },
  "engines": {
    "node": ">=18.18.0 || >=20.0.0",
    "npm": ">=8.0.0"
  }
}
